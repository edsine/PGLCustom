    <!-- CRM -->

    <record id="view_crm_form_inherit" model="ir.ui.view">
      <field name="name">crm.form.inherited</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.crm_lead_view_form"/>
      <field name="arch" type="xml">
        <!-- find field description and add the field
             new_field after it -->
        <xpath expr="/form/sheet/group/group[@name='opportunity_partner']/field[@name='partner_id']" position="after">
          <field name="project_category"/>
        </xpath>
      </field>
    </record>


    <!-- HR -->

    <record id="view_hr_employee_form_inherit" model="ir.ui.view">
      <field name="name">hr.employee.form.inherited</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">
        <!-- find field description and add the field
             new_field after it -->
        <xpath expr="/form/sheet/div" position="inside">
          <h2>
            <field name="title" placeholder="Title"/>
          </h2>
        </xpath>

        <field name="name" position="attributes">
          <attribute name="placeholder">Full Name</attribute>
        </field>

        <xpath expr="//field[@name='children']" position="after">
          <field name="name_of_children" placeholder="Name of Children" string="Name of Children"/>
        </xpath>

        <xpath expr="//field[@name='emergency_phone']" position="after">
          <field name="emergency_relationship">Relationship</field>
          <field name="emergency_contact_2">Emergency Contact 2</field>
          <field name="emergency_contact_2">Emergency Phone 2</field>
          <field name="emergency_relationship_2">Relationship</field>
        </xpath>

        <field name="study_school" position="attributes">
          <attribute name="string">Name of Institution</attribute>
        </field>

        <field name="study_field" position="attributes">
          <attribute name="string">Course/Subject of Study</attribute>
        </field>

        <field name="certificate" position="attributes">
          <attribute name="string">Qualification Obtained</attribute>
        </field>

        <field name="study_school" position="after">
          <field name="class_of_degree" string="Grade/Class of Degree"/>
          <field name="deg_start_date" string="Start Date"/>
          <field name="deg_end_date" string="End Date"/>
        </field>

        <xpath expr="//group[@name='work_permit']" position="after">
          <group name="professional_qualifications" string="Professional Qualifications">
            <field name="prof_name_of_institution" string="Name of Institution"/>
            <field name="prof_certificate_obtained" string="Certificate Obtained"/>
            <field name="prof_class_of_certification" string="Grade/Class of Certification"/>
            <field name="prof_start_date" string="Start Date"/>
            <field name="prof_end_date" string="End Date"/>
          </group>
        </xpath>

        <xpath expr="//group[@name='professional_qualifications']" position="after">
          <group name="employment_history" string="Employment History">
            <field name="emp_history_organization" string="Organization"/>
            <field name="emp_history_role" string="Role"/>
            <field name="emp_history_contact_name" string="Contact Name"/>
            <field name="emp_history_start_date" string="Start Date"/>
            <field name="emp_history_end_date" string="End Date"/>
            <field name="emp_reason_for_leaving" string="Reason for Leaving"/>
          </group>
        </xpath>

        <group name="employment_history" position="after">
          <group name="" string="">
            <field name="working_relatives" string="Do you have any relatives working in this company?"></field>
            <field name="working_relatives_name" attrs="{'invisible': [('working_relatives', 'not in', ['Yes'])]}" string="Name"/>

            <field name="working_relatives_relationship" attrs="{'invisible': [('working_relatives', 'not in', ['Yes'])]}" string="Relationship"/>
          </group>
        </group>

        <group name="employment_history" position="after">
          <group name="security" string="Security">
              <field name="months_lived" string="How long have you lived in your current Address? Months"></field>
              <field name="years_lived" string="Years"></field>
              <field name="conviction" string="Have you been convicted of felony or a misdemeanor or served time?"/>
              <field name="conviction_details" attrs="{'invisible': [('conviction', 'not in', ['Yes'])]}" string="If Yes, kindly describe incident (indicate city, state and charge):"/>

              <field name="driving_license" string="Do you have a driving license?"></field>
              <field name="work_in_other_states" string="Are you willing to work in other states?"></field>
              <field name="background_check" string="Do you authorize PGL to do a criminal and professional background check on you?"></field>
          </group>
        </group>


      </field>
    </record>
  </data>
